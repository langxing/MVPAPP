<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <CheckBox
        android:id="@+id/cbProblem"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="13dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="无明显问题"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
        android:id="@+id/cbYSC"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="个别不清晰或个别有色差"
        app:layout_constraintTop_toTopOf="@+id/cbProblem"
        app:layout_constraintEnd_toEndOf="@+id/editRemark"/>
    <CheckBox
        android:id="@+id/cbSCYZ"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="较多不清晰或色差严重"
        app:layout_constraintTop_toBottomOf="@+id/cbProblem"
        app:layout_constraintStart_toStartOf="@+id/cbProblem"/>
    <EditText
        android:id="@+id/editRemark"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="13dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#979797"
        android:textSize="14sp"
        android:textColorHint="#979797"
        android:hint="备注"
        android:background="@drawable/shape_edit_remark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cbSCYZ"
        app:layout_constraintLeft_toRightOf="@+id/cbSCYZ"
        app:layout_constraintBottom_toBottomOf="@+id/cbSCYZ"/>
</androidx.constraintlayout.widget.ConstraintLayout>